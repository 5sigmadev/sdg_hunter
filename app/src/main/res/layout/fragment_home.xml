<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fivesigmagames.sdghunter.view.HomeFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red_mon_bg"
        app:srcCompat="@drawable/red_monster"
        android:scaleType="fitXY"
        android:cropToPadding="false"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true" />

    <Button
        android:id="@+id/home_cam_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:layout_margin="40dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/yellow_monster_on_bg"
        android:id="@+id/iv_yellow_monster_on_bg"
        android:scaleType="fitXY"
        android:rotationX="30"
        android:rotationY="30"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:paddingRight="90dp"
        android:paddingLeft="-60dp"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_above="@+id/sdh_hunter_text"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/red_monster_on_bg"
        android:id="@+id/iv_red_monster_on_bg"
        android:scaleType="fitXY"
        android:scaleY="0.75"
        android:scaleX="0.75"
        android:rotationX="-30"
        android:rotationY="30"
        android:paddingRight="-60dp"
        android:paddingLeft="90dp"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_above="@+id/sdh_hunter_text"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/green_monster_on_bg"
        android:id="@+id/iv_green_monster_on_bg"
        android:scaleType="fitXY"
        android:scaleX="0.7"
        android:scaleY="0.70"
        android:rotationY="-30"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sdh_hunter_text" />

    <TextView
        android:text="SDG Hunter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sdh_hunter_text"
        android:layout_marginBottom="68dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/home_cam_btn"
        android:layout_alignParentStart="true" />


</RelativeLayout>
